{% extends "admin.html.twig" %}

{% block title %}
    {{ parent() }} - 
    {{ title }}
{% endblock %}

{% block options %}
    <li class="breadcrumb-item"><a href="{{ path("admin.countries.create") }}" class="btn btn-sm btn-success"><i class="mdi mdi-plus"></i></a></li>
{% endblock %}

{% block body %}
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Code</th>
                <th scope="col">Nationality</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for key, country in countries %}
            <tr>
                <td>{{ key + 1 }}</td>
                <td>{{ country.code }}</td>
                <td>{{ country.nationality }}</td>
                <td>
                    <a
                        href="{{ path('admin.countries.edit', {'countryId': country.id}) }}"
                        class="btn btn-sm btn-warning"
                    >Edit</a>
                    <a
                        href="{{ path('admin.countries.remove', {'countryId': country.id}) }}"
                        class="btn btn-sm btn-danger"
                    >Remove</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}