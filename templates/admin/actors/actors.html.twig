{% extends "admin.html.twig" %}

{% block title %}
    {{ parent() }} - 
    {{ title }}
{% endblock %}

{% block options %}
    <li class="breadcrumb-item"><a href="{{ path("admin.actors.create") }}" class="btn btn-sm btn-success"><i class="mdi mdi-plus"></i></a></li>
{% endblock %}

{% block body %}
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nationality</th>
                <th scope="col">First name</th>
                <th scope="col">Last name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for key, actor in actors %}
            <tr>
                <td>{{ key + 1 }}</td>
                <td>{{ actor.nationality }}</td>
                <td>{{ actor.firstName }}</td>
                <td>{{ actor.lastName }}</td>
                <td>
                    <a
                        href="{{ path('admin.actors.edit', {'actorId': actor.id}) }}"
                        class="btn btn-sm btn-warning"
                    >Edit</a>
                    <a
                        href="{{ path('admin.actors.remove', {'actorId': actor.id}) }}"
                        class="btn btn-sm btn-danger"
                    >Remove</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}