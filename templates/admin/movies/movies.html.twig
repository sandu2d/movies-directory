{% extends "admin.html.twig" %}

{% block title %}
    {{ parent() }} - 
    {{ title }}
{% endblock %}

{% block options %}
    <li class="breadcrumb-item"><a href="{{ path("admin.movies.create") }}" class="btn btn-sm btn-success"><i class="mdi mdi-plus"></i></a></li>
{% endblock %}

{% block body %}
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Country</th>
                <th scope="col">Name</th>
                <th scope="col">Year</th>
                <th scope="col">Imdb rate</th>
                <th scope="col">Language</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.id }}</td>
                <td>{{ movie.id }}</td>
                <td>{{ movie.id }}</td>
                <td>{{ movie.id }}</td>
                <td>{{ movie.id }}</td>
                <td>{{ movie.id }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}